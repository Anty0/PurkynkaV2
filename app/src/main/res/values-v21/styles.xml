<resources>

    <style name="AppTheme.Grades" parent="AppTheme.Grades.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorGrades</item>
    </style>

    <style name="AppTheme.Attendance" parent="AppTheme.Attendance.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorAttendance</item>
    </style>

    <style name="AppTheme.Lunches" parent="AppTheme.Lunches.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorLunches</item>
    </style>

    <style name="AppTheme.Timetables" parent="AppTheme.Timetables.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorTimetables</item>
    </style>

    <style name="AppTheme.WifiLogin" parent="AppTheme.WifiLogin.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorWifiLogin</item>
    </style>


    <style name="AppTheme.Dialog.Grades" parent="AppTheme.Dialog.Grades.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorGrades</item>
    </style>

    <style name="AppTheme.Dialog.Attendance" parent="AppTheme.Dialog.Attendance.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorAttendance</item>
    </style>

    <style name="AppTheme.Dialog.Lunches" parent="AppTheme.Dialog.Lunches.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorLunches</item>
    </style>

    <style name="AppTheme.Dialog.Timetables" parent="AppTheme.Dialog.Timetables.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorTimetables</item>
    </style>

    <style name="AppTheme.Dialog.WifiLogin" parent="AppTheme.Dialog.WifiLogin.Base">
        <item name="android:navigationBarColor">@color/navigationBarColorWifiLogin</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.NoActionBar.Base">
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.Dialog" parent="AppTheme.Dialog.Base">
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>
</resources>
