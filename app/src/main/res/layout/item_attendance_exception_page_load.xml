<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".attendance.ui.PageLoadExceptionItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.mikepenz.iconics.view.IconicsImageView
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:iiv_icon="gmd_error"
        app:iiv_color="@color/materialLightRed"
        app:iiv_size="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            style="?attr/textAppearanceListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:lines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@string/item_attendance_exception_page_load" />

        <TextView
            style="?attr/textAppearanceListItemSmall"
            android:id="@+id/txtExceptionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:gravity="end"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>